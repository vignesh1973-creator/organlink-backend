# OrganLink Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/organlink_db

# JWT Secret Keys
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Blockchain Configuration
BLOCKCHAIN_NETWORK=sepolia
PRIVATE_KEY=your-ethereum-private-key-for-sepolia-testnet
CONTRACT_ADDRESS=your-deployed-contract-address

# RPC Provider
RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id

# IPFS Configuration
IPFS_API_URL=http://127.0.0.1:5001
# Or use Pinata/Infura IPFS:
# PINATA_API_KEY=your-pinata-api-key
# PINATA_SECRET_KEY=your-pinata-secret-key

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=organlink-uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@organlink.org
ADMIN_PASSWORD=change-this-secure-password

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
